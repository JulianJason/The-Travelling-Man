        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/section_label"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center"
        android:layout_marginBottom="18dp"
        android:layout_alignBottom="@+id/section_label"
        android:background="@drawable/ic_speech_bubble9"
        android:layout_toEndOf="@+id/section_label">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_message_english"
            android:id="@+id/welcomeMessage"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Select_Language_English"
            android:layout_gravity="center"
            android:id="@+id/selectLanguage"
            />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:text="@string/English"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/English"
                android:layout_weight="1"
                android:onClick="changeToEnglish"/>

            <Button
                android:text="@string/Chinese"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/Chinese"
                android:layout_weight="1"
                android:onClick="changeToChinese"/>

            <Button
                android:text="@string/bahasa_melayu"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/malay"
                android:layout_weight="1"
                android:onClick="changeToMalay"/>

            <Button
                android:text="@string/Tamil"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/tamil"
                android:layout_weight="1"
                android:onClick="changeToTamil"/>

        </TableRow>


    </LinearLayout>

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Travelling man"
        android:layout_marginTop="149dp"
