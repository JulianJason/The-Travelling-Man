<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/l1" >



    <Button

        android:layout_marginTop="30dp"
        android:text="@string/attr"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="60dp"
        android:id="@+id/button"
        android:textSize="20sp"
        android:clickable="false"/>

    <ScrollView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:verticalScrollbarPosition="left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r1">
                <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/mbs"
                    android:id="@+id/attr1"
                    android:contentDescription="@string/mbs"/>
                <TextView
                    android:text="@string/mbs"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/attr1"
                    android:textAlignment="gravity"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:onClick="popup"
                    android:id="@+id/name1" />
                <TextView
                    android:text="@string/dist1"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/name1"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dist1" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/r2">
                <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/flyer"
                    android:id="@+id/attr2"
                    android:contentDescription="@string/flyer"/>
                <TextView
                    android:text="@string/flyer"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="17dp"
                    android:layout_toEndOf="@+id/attr2"
                    android:textAlignment="gravity"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:onClick="popup"
                    android:id="@+id/name2" />
                <TextView
                    android:text="@string/dist2"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/name2"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dist2" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/r3">
                <ImageView
                    android:layout_marginStart="13dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/vivocity"
                    android:id="@+id/attr3"
                    android:contentDescription="@string/vivo"/>
                <TextView
                    android:text="@string/vivo"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/attr3"
                    android:textAlignment="gravity"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:onClick="popup"
                    android:id="@+id/name3" />
                <TextView
                    android:text="@string/dist3"
                    android:layout_marginStart="30dp"

                    android:layout_toEndOf="@+id/name3"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dist3" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/r4">
                <ImageView
                    android:layout_marginStart="13dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/rws"
                    android:id="@+id/attr4"
                    android:contentDescription="@string/rws"/>
                <TextView
                    android:text="@string/rws"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/attr4"
                    android:textAlignment="gravity"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:onClick="popup"
                    android:id="@+id/name4" />
                <TextView
                    android:text="@string/dist2"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/name4"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dist4" />
            </RelativeLayout>
            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/r5">
            <ImageView
                android:layout_marginStart="13dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/buddha"
                android:id="@+id/attr5"
                android:contentDescription="@string/buddha"/>
            <TextView
                android:text="@string/buddha"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/attr5"
                android:textAlignment="gravity"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:onClick="popup"
                android:id="@+id/name5" />
            <TextView
                android:text="@string/dist1"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/name5"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/dist5" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/r6">
                <ImageView
                    android:layout_marginStart="13dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/zoo"
                    android:id="@+id/attr6"
                    android:contentDescription="@string/zoo"/>
                <TextView
                    android:text="@string/zoo"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/attr6"
                    android:textAlignment="gravity"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:onClick="popup"
                    android:id="@+id/name6" />
                <TextView
                    android:text="@string/dist3"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/name6"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dist6" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
