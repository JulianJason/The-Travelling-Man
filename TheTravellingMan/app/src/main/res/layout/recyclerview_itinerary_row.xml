<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="141dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fromResult"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:layout_alignBaseline="@+id/toResult"
            android:layout_alignBottom="@+id/toResult"
            android:layout_alignParentStart="true"
            android:layout_marginStart="34dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/time_icon"
            android:id="@+id/timeIcon"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/fromResult"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeValue"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_marginBottom="11dp"
            android:layout_alignBottom="@+id/timeIcon"
            android:layout_alignEnd="@+id/fromResult" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/dollar_icon"
            android:id="@+id/costIcon"
            android:layout_marginStart="27dp"
            android:layout_alignTop="@+id/timeIcon"
            android:layout_toEndOf="@+id/timeValue" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/costValue"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_alignBaseline="@+id/timeValue"
            android:layout_alignBottom="@+id/timeValue"
            android:layout_toEndOf="@+id/costIcon"
            android:layout_marginStart="20dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toResult"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/costValue" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/costValue"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp"
            android:id="@+id/methodOfTransportText" />
    </RelativeLayout>
</LinearLayout>